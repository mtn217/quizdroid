<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.washington.mtn217.quizdroid.Math2Ans">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mathTwo">

            <RadioButton
                android:text="@+string/mathtwo1ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twoAns1"
                android:layout_weight="1" />

            <RadioButton
                android:text="@+string/mathtwo2ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twoAns4"
                android:layout_weight="1" />

            <RadioButton
                android:text="@+string/mathtwo3ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twoAns2"
                android:layout_weight="1" />

            <RadioButton
                android:text="@+string/mathtwo4ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twoAns3"
                android:layout_weight="1" />
        </RadioGroup>

        <TextView
            android:text="You got x out of 1 correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:visibility="invisible"/>

        <Button
            android:text="@+string/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:visibility="invisible" />


    </LinearLayout>

</FrameLayout>
