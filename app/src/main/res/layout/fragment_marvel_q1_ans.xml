<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.washington.mtn217.quizdroid.MarvelQ1Ans">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/marvelOne">

            <RadioButton
                android:text="@+string/marvelone1ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton23"
                android:layout_weight="1" />

            <RadioButton
                android:text="@+string/marvelone2ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton24"
                android:layout_weight="1" />

            <RadioButton
                android:text="@+string/marvelone3ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton22"
                android:layout_weight="1" />

            <RadioButton
                android:text="@+string/marvelone4ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton21"
                android:layout_weight="1" />
        </RadioGroup>

        <TextView
            android:text="You have x out of 1 correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:visibility="invisible" />

        <Button
            android:text="@+string/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:visibility="invisible" />
    </LinearLayout>

</FrameLayout>
