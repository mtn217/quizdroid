<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.washington.mtn217.quizdroid.MarvelOverview">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Marvel Super Heroes Overview"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:text="This section of the quiz will have lots of questions about Marvel Super Heroes! There are 2 questions in this section. Click Begin to start the quiz."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <Button
            android:text="@+string/begin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button" />

    </LinearLayout>

</FrameLayout>
